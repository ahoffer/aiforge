{
  "mcpServers": {
    "searxng": {
      "command": "uvx",
      "args": ["mcp-searxng"],
      "env": {
        "SEARXNG_URL": "http://bigfish:31080"
      }
    },
    "filesystem": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "/home/aaron"]
    },
    "git": {
      "command": "uvx",
      "args": ["mcp-server-git"]
    },
    "shell": {
      "command": "uvx",
      "args": ["mcp-shell-server"],
      "env": {
        "ALLOW_COMMANDS": "ls,cat,head,tail,grep,find,wc,sort,uniq,diff,git,python3,node,npm,make,kubectl,curl"
      }
    },
    "fetch": {
      "command": "uvx",
      "args": ["mcp-server-fetch"]
    }
  }
}
